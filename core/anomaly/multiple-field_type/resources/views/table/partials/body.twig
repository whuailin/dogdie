<tbody>
{% for row in table.rows %}
    <tr id="{{ loop.index }}">

        <td style="width: 30px;">
            {{ icon('fa fa-arrows handle') }}
        </td>

        {% for column in row.columns %}
            <td class="{{ column.class }}" {{ column.attributes }}>
                {{ column.value|raw }}
            </td>
        {% endfor %}

        <td class="text-lg-right buttons">
            <nobr>{{ buttons(row.buttons)|raw }}</nobr>
        </td>

    </tr>
{% endfor %}
</tbody>
