<div {{ html_attributes(field_type.attributes) }}>

    {% for value, option in field_type.options %}
        {% if option is iterable %}

            <label>{{ value }}</label>

            {% for value, option in option %}
                <label class="c-input c-radio">
                    <input
                            type="radio"
                            value="{{ value }}"
                            name="{{ field_type.input_name }}"
                            {{ value == field_type.key ? 'checked' }}>

                    <span class="c-indicator"></span>

                    {{ trans(option) }}
                </label>
            {% endfor %}
        {% else %}
            <label class="c-input c-radio">
                <input
                        type="radio"
                        value="{{ value }}"
                        name="{{ field_type.input_name }}"
                        {{ value == field_type.key ? 'checked' }}>

                <span class="c-indicator"></span>

                {{ trans(option) }}
            </label>
        {% endif %}
    {% endfor %}

</div>
