{% if form.options.title %}
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">
                {{ trans(form.options.title)|raw }}

                {% if form.options.description %}
                    <small>
                        <br>{{ trans(form.options.description)|raw }}
                    </small>
                {% endif %}
            </h4>
        </div>
    </div>
{% endif %}
